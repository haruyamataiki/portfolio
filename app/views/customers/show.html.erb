<%= render 'layouts/c_header' %>
<div class="wrapper">
    <div class="page-header-image" data-parallax="true" style="background-image: url(&quot;../assets/img3.jpg&quot;);">
        <div class="container">
            <div class="row">
                <div class="profile-image">
                    <%= attachment_image_tag @customer, :profile_image, :fill, 250, 250, format: 'jpeg', fallback: "no_image.jpg" %>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="profile-name">
                    <%= @customer.last_name %><%= @customer.first_name %>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1 class="score"><%= @customer.set_total %><small>Total</small></h1>
                </div>
            </div>
            <div class="row-follow">
                <div class="col-lg-12 mt-1 text-center">
                    <div class="inline-block">following:<%= @customer.follower.count %></div>
                    <div class="inline-block">
                      <% if current_customer != @customer %>
                        <% if current_customer.following?(@customer) %>
                        <button type="button" class="btn-outline-light btn"><%= link_to 'folloowする', customer_relationship_path(@customer), method: :delete %></button>
                      <% else %>
                        <button type="button" class="btn-outline-light btn">
                       <%= link_to 'followを外す', customer_relationships_path(@customer), method: :post %></button>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="inline-block">follower:<%= @customer.followed.count %></div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 mt-4 text-center">
                    <h1>SCORE</h1>
                </div>
                <div class="col-lg-6 mt-4 text-center">
                    <h1>MYTEAM</h1>
                </div>
            </div>


    <div class="row">
    
        <table border="1">
            <tr>
                <td>氏名</td>
                <td>

                </td>
            </tr>
            <tr>
                <td>カナ</td>
                <td>
                </td>
            </tr>
            <tr>
                <td>メール</td>
                <td><%= @customer.email %></td>
            </tr>
            <tr>
                <td>50m</td>
                <td><%= @customer.running_score %>秒</td>
            </tr>
            <tr>
                <td>立ち幅跳び</td>
                <td><%= @customer.jumping_score %>m</td>
            </tr>
            <tr>
                <td>反復横跳び</td>
                <td><%= @customer.agility_score %>回</td>
             </tr>
             <tr>
                <td>上体起こし</td>
                <td><%= @customer.sit_ups_score %>回</td>
            </tr>
            <tr>
                <td>握力</td>
                <td><%= @customer.grip_strength_score %>kg</td>
            </tr>
        </table>
    </div>
    <%= link_to "編集する",edit_customer_path(@customer.id), class: 'btn btn-sm btn-primary' %>
    <h2>募集</h2>
    <%= link_to "募集する", new_recruitment_path, class: 'btn btn-sm btn-primary' %>

    <div class="row">
        <h2>募集履歴</h2>
        <% @recruitments.each do |recruitment| %>
            <table class="table">
                <tr>
                    <td><%= recruitment.title %></td>
                    <td><%= recruitment.body %></td>
    　           </tr>
            </table>
            <% end %>
    </div>
    <div class="row">
        <h2>マイチーム</h2>
                <table class="table">
                    <% @teams.each do |team| %>
                        <tr>
                            <td><%= team.name %><%= link_to '詳細', team_path(team.id) %><td>
                        </tr>
                      <% end %>
         <%= link_to "新しくチームを作る", new_team_path, class: 'btn btn-sm btn-primary' %>
    </div>


</div>
