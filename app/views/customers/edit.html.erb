<h1>Customers#edit</h1>
<p>Find me in app/views/customers/edit.html.erb</p>
    <%= form_for(@customer) do |f| %>
    <table border="1">
        <tr>
            <td>氏名</td>
            <td>
                <%= f.text_field :last_name %>
                <%= f.text_field :first_name %>
            </td>
        </tr>
        <tr>
            <td>カナ</td>
            <td>
                <%= f.text_field :last_name_kana %>
                <%= f.text_field :first_name_kana %>
            </td>
        </tr>
        <tr>
            <td>メールアドレス</td>
            <td>
                <%= f.email_field :email %>
            </td>
        </tr>
        <tr>
            <td>50m走</td>
            <td>
                <%= f.text_field :running_score %>
            </td>
        </tr>
        <tr>
            <td>立ち幅跳び</td>
            <td>
                <%= f.text_field :jumping_score %>
            </td>
        </tr>
        <tr>
            <td>反復横跳び</td>
            <td>
                <%= f.text_field :agility_score %>
            </td>
        </tr>
        <tr>
            <td>上体起こし</td>
            <td>
                <%= f.text_field :sit_ups_score %>
            </td>
        </tr>
        <tr>
            <td>握力</td>
            <td>
                <%= f.text_field :grip_strength_score %>
            </td>
        </tr>
    </table>
    <%= f.submit "編集内容を保存する",class:"btn btn-md btn-primary" %>
    <% end %>