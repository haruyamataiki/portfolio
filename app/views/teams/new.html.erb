<%= render 'layouts/c_header' %>
<div class="container">
  <div class="row text-center">
  <%= form_for(@team) do |f| %>
    <div class="col-lg-12 text-center">
      <div class="field">
        <h4>チーム画像</h4>
        <%= attachment_image_tag @team, :team_image%><br />
        <%= f.attachment_field :team_image %>
      </div>
      <div class="field">
        <h4>チーム名</h4>
        <%= f.text_field :name ,class:"col-xs-12"%>
      </div>
      <div class="field">
  　　   <h4>チーム説明</h4>
        <%= f.text_area :content ,class:"col-xs-12"%>


                   <div class="field mt-5">
                <%= f.submit "作成する", class: "btn btn-success my-6" %>
            </div>
    <% end %>

    </div>
  </div>
  </div>
