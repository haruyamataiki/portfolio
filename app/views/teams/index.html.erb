<%= render 'layouts/c_header' %>
<div class="container">
    <div class="row mt-5 ">
        <div class="col-3"></div>
        <div class="col-6 text-center"><h1>TEAMS<h1><h4><small class="text-muted text-center">チーム一覧</small></h4></div>
        <div class="col-3 mt-5">
            <%= form_tag(@teams_path,:method => 'get') do %>
            <%= text_field_tag :search %>
            <%= submit_tag '検索', :name => nil %>
            <% end %>
        </div>
    </div>
    <div class="row mt-5">
    	<% @teams.each do |team| %>
            <div class="col-lg-4 col-md-6 col-sm-6">
            <div class="card card-starts">
                <div class="card-header card-header-warning card-header-icon">
                    <div class="card-icon">
                    <%= attachment_image_tag team, :team_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                    </div>
                    <h5 class="card-category"><%= link_to team.name,team_path(team) %></h5>
                    <h3 class="card-title"><%= team.team_score %></h3>
                </div>
                <div class="card-footer">
                    <div class="stats">
                        <i class="material-icons text-danger">warning</i>
                    <a href="#pablo">Get More Space...</a>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
	</div>
</div>