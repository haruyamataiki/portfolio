<%= render 'layouts/c_header' %>
  <div class="line_container">
    <div class="line_title">
      <h2><%= @team.name%></h2>
    </div>
    <div class="line_contents scroll">
      <div class="name">
        <div id='messages' data-team_id="<%= @team.id %>" data-room_id="<%= @room.id %>">
          <%= render @messages %>
         </div>
      </div>
    </div>
    <div class="text text-center">
    <%= text_field_tag :content, nil, data: { behavior: 'team_speaker' } %>
    </div>
  </div>
